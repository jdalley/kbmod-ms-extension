{
  "manifest_version": 2,
  "name": "KBMOD MultiStream Extension",
  "short_name": "kbmod-ms-extension",
  "description": "Extension to quickly create and open a KBMOD MultiStream URL when browsing TwitchTV.",
  "version": "1.1",
  "browser_action": {
    "default_icon": "images/icon32.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/kbmod-logo-48.png",
    "128": "images/kbmod-logo-128.png"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "contextMenus",
    "debugger",
    "background",
    "tabs",
    "storage"
  ]
}
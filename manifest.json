{
  "manifest_version": 2,
  "name": "KMOD MultiStream Extension",
  "description": "Extension to quickly create and open a KBMOD MultiStream URL when browsing TwitchTV.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon32.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "contextMenus",
    "debugger",
    "background",
    "tabs",
    "storage"
  ]
}